@using MvcCv.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewData["Title"] = "Yeteneklerim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5 text-primary">🛠️ Yeteneklerim</h1>
        <a href="/Yetenek/YetenekEkle" class="btn btn-success">➕ Yeni Yetenek Ekle</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Yetenek</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Yetenek</td>
                        <td class="text-center">
                            <a href="/Yetenek/Sil/@item.ID" class="btn btn-sm btn-danger" onclick="return confirm('Bu yeteneği silmek istediğinize emin misiniz?')">🗑️ Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
