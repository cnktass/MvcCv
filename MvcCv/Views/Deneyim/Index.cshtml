@using MvcCv.Models.Entity
@model List<TblDeneyimlerim>
@{
    ViewData["Title"] = "Deneyim Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5 text-primary">📚 Deneyim Listesi</h1>
        <a href="/Deneyim/DeneyimEkle" class="btn btn-success">➕ Yeni Deneyim Ekle</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Başlık</th>
                    <th>Alt Başlık</th>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Baslik</td>
                        <td>@item.AltBaslik</td>
                        <td>@item.Aciklama</td>
                        <td>@item.Tarih</td>
                        <td class="text-center">
                            <a href="/Deneyim/Duzenle/@item.ID" class="btn btn-sm btn-primary me-1">✏️ Düzenle</a>
                            <a href="/Deneyim/Sil/@item.ID" class="btn btn-sm btn-danger" onclick="return confirm('Bu deneyimi silmek istediğinize emin misiniz?')">🗑️ Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
